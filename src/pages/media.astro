<BasicLayout title="Gerind Tershana - Media Collection" description="My personal collection of books, movies, manga, anime and music" page="media">
  <a href="/" class="text-white absolute bg-neutral-900 hover:bg-neutral-800 top-4 left-4 px-4 py-2 border-1 border-solid border-neutral-600 rounded-lg">Back</a>

  <div class="container mx-auto px-4 py-16 space-y-8">
    <!-- Books Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Books</h2>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
        {
          books.map((b) => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
                <img src={b.img} alt={b.alt} class="w-full h-full object-cover rounded-lg" />

                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex flex-col items-center justify-center">
                  <span class="text-white text-lg font-semibold mb-2 px-4">{b.title}</span>
                  <a href={b.link} class="text-white hover:text-blue-400 flex items-center">
                    <Icon name="bx:link" class="h-5 w-5 mr-1" />
                    Read More
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Movies Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Movies</h2>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
        {
          movies.map((m) => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
                <img src={m.img} alt={m.alt} class="w-full h-full object-cover rounded-lg" />

                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex flex-col items-center justify-center">
                  <span class="text-white text-lg font-semibold mb-2 px-4">{m.title}</span>
                  <a href={m.link} class="text-white hover:text-blue-400 flex items-center">
                    <Icon name="bx:link" class="h-5 w-5 mr-1" />
                    Read More
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Manga Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Manga</h2>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
        {
          manga.map((m) => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
