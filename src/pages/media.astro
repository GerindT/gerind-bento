---
import BasicLayout from "../layouts/BasicLayout.astro";
import { Icon } from "astro-icon/components";
---

<script>
  import { timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../lib/constants";

  timeline(loaderAnimation as TimelineDefinition);
</script>

<BasicLayout title="Gerind Tershana - Media Collection" description="My personal collection of books, movies, manga, anime and music" page="media">
  <a href="/" class="text-white absolute bg-neutral-900 hover:bg-neutral-800 top-4 left-4 px-4 py-2 border-1 border-solid border-neutral-600 rounded-lg">Back</a>

  <div class="container mx-auto px-4 py-16 space-y-8">
    <!-- Books Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Books</h2>
      <div class="grid grid-cols-5 gap-6">
        {
          [1, 2, 3, 4, 5].map(() => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
                <img src="https://images.unsplash.com/photo-1543002588-bfa74002ed7e" alt="Book" class="w-full h-72 object-cover rounded-lg" />
                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex flex-col items-center justify-center p-4">
                  <span class="text-white text-lg font-semibold mb-2">Book Title</span>
                  <div class="flex text-yellow-400 mb-2">
                    <Icon name="solar:star-outline" class="h-5 w-5" />
                    <Icon name="solar:star-outline" class="h-5 w-5" />
                    <Icon name="solar:star-outline" class="h-5 w-5" />
                    <Icon name="solar:star-outline" class="h-5 w-5" />
                    <Icon name="solar:star-outline" class="h-5 w-5" />
                  </div>
                  <p class="text-white text-sm italic mb-2">"An amazing journey through words"</p>
                  <a href="#" class="text-white hover:text-blue-400 flex items-center">
                    <Icon name="bx:link" class="h-5 w-5 mr-1" />
                    Read More
                  </a>
                </div>{" "}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Movies Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Movies</h2>
      <div class="grid grid-cols-5 gap-6">
        {
          [1, 2, 3, 4, 5].map(() => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
                <img src="https://images.unsplash.com/photo-1536440136628-849c177e76a1" alt="Movie" class="w-full h-72 object-cover rounded-lg" />

                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                  <span class="text-white text-lg font-semibold">Movie Title</span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Manga Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Manga</h2>
      <div class="grid grid-cols-5 gap-6">
        {
          [1, 2, 3, 4, 5].map(() => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
                <img src="https://images.unsplash.com/photo-1613376023733-0a73315d9b06" alt="Manga" class="w-full h-72 object-cover rounded-lg" />

                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                  <span class="text-white text-lg font-semibold">Manga Title</span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Anime Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Anime</h2>
      <div class="grid grid-cols-5 gap-6">
        {
          [1, 2, 3, 4, 5].map(() => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
                <img src="https://images.unsplash.com/photo-1607604276583-eef5d076aa5f" alt="Anime" class="w-full h-72 object-cover rounded-lg" />

                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                  <span class="text-white text-lg font-semibold">Anime Title</span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Music Section -->
    <section>
      <h2 class="text-3xl font-bold text-white mb-8">Music</h2>
      <div class="grid grid-cols-5 gap-6">
        {
          [1, 2, 3, 4, 5].map(() => (
            <div class="group perspective">
              <div class="relative transform transition-all duration-300 group-hover:rotate-y-12 group-hover:scale-105 group-hover:shadow-xl">
                <img src="https://images.unsplash.com/photo-1459749411175-04bf5292ceea" alt="Album" class="w-full h-72 object-cover rounded-lg" />

                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                  <span class="text-white text-lg font-semibold">Album Title</span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</BasicLayout>

<style>
  .perspective {
    perspective: 1000px;
  }
  .rotate-y-12 {
    transform: rotateY(12deg);
  }
</style>
